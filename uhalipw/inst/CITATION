citHeader("Please cite the following works when using the 'uhalipw' software
           package, including both the software tool and the article describing
           the statistical methodology.")

year <- format(Sys.Date(), "%Y")
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{uhalipw}: Nonparametric IPW Estimation via Undersmoothing Propensity Score Fits",
         author = c(person("Nima", "Hejazi", "S"),
                    person("Mark", "van der Laan", "J")),
         year = year,
         note = note,
         doi = "",
         url = "https://github.com/nhejazi/uhalipw")
